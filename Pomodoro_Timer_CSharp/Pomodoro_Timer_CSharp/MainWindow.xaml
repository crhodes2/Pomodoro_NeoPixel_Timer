<Window x:Class="Pomodoro_Timer_CSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pomodoro_Timer_CSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="412.578" Width="295.738">
    <Grid Margin="0,0,0,30">
        <StackPanel Orientation="Vertical" Margin="5,5,5,-42"/>
        <Label Content="Ports:" HorizontalAlignment="Left" Height="29" Margin="27,-45,0,0" VerticalAlignment="Top" Width="45"/>
        <Canvas>
            <ComboBox x:Name="port" MinWidth="200" Canvas.Left="7" Canvas.Top="33"/>
            <Button Content="Connect" Click="connect_Click" Canvas.Left="232" Canvas.Top="32" />
            <Label x:Name="label" Content="" Width="124" Canvas.Left="47" Canvas.Top="57"/>
        </Canvas>
        <Canvas>
            <Label Content="RGB Color" Canvas.Left="105" Canvas.Top="87" />
            <Label Content="R" Canvas.Left="23" Canvas.Top="110"/>
            <Label Content="G" Canvas.Left="22" Canvas.Top="141"/>
            <Label Content="B" Canvas.Left="23" Canvas.Top="171"/>
            <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" x:Name ="red" Minimum="0" Maximum="255" TickFrequency="1" ValueChanged="Slider_ValueChanged" Margin="46,114,0,0" Height="22"/>
            <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" x:Name ="green" Minimum="0" Maximum="255" TickFrequency="1" ValueChanged="Slider_ValueChanged" Margin="46,145,0,0" Height="22"/>
            <Slider HorizontalAlignment="Left" VerticalAlignment="Top" Width="191" x:Name ="blue" Minimum="0" Maximum="255" TickFrequency="1" ValueChanged="Slider_ValueChanged" Margin="46,176,0,0" Height="20"/>
        </Canvas>

        <Canvas>
            <Rectangle VerticalAlignment="Top" Height="95" x:Name="colorBox" HorizontalAlignment="Left" Width="122" Fill="Black" StrokeThickness="1" Stroke="Aqua" Margin="83,212,0,0" RenderTransformOrigin="0.5,0.5">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleX="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>
            <Button Content="Press" Margin="86,319,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Click="ColorChange" Height="31"/>
        </Canvas>



    </Grid>
</Window>
